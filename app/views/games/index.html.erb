<h1>Top popular games on Twitch!</h1>

<ul class="thumbnails">
  <% @games.each_with_index do |game, index| %>
    <li class="span4">
      <% if game.logo %>
        <%= link_to image_tag(game.logo), game %><br>
      <% end %>
      <%= link_to "#{index + 1} - #{game.name} : #{game.viewers}",
                  "http://www.twitch.tv/directory/game/#{game.name}" %>
    </li>
  <% end %>
</ul>