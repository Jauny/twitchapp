<h1>Top popular games on Twitch!</h1>

<ul class="thumbnails">
  <% @games.each_with_index do |game, index| %>
    <li class="span4">
      <%= link_to image_tag(game.logo), game %><br>
      <a href="http://www.twitch.tv/directory/game/<%= game.name %>">
        <%= "#{index + 1} - #{game.name} : #{game.viewers}" %>
      </a>
    </li>
  <% end %>
</ul>